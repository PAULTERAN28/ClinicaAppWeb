
@{
    ViewBag.Title = "Gestion Trabajador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="~/Scripts/Plugins/DataTables-1.10.15/media/js/jquery.dataTables.min.js"></script>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>

<main>
    <nav aria-label="breadcrumb" style="padding-left:50px">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Home", "Home")">Incio<</a></li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-sm-12">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    Gestion Trabajador
                </div>
                <div class="card-body card-compra p-2">
                    <div class="row">

                        <div class="col-sm-6">
                            <div class="card border-info">
                                <div class="card-body p-2">
                                    <h6 class="card-title mb-1 text-info"></h6>
                                    <div class="row align-items-end">
                                        <input id="txtIdProveedor" type="hidden" value="0" />
                                        <div class="col-sm-4">
                                            <div class="form-group mb-0">
                                                <label class="col-form-label col-form-label-sm">Nombre:</label>
                                                <input type="text" class="form-control form-control-sm model" id="txtNombreEmpleado" name="txtNombreEmpleado">

                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group mb-0">
                                                <label class="col-form-label col-form-label-sm">Apellido Paterno:</label>
                                                <input type="text" class="form-control form-control-sm model" id="txtApellidoPaterno" name="txtApellidoPaterno">

                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group mb-0">
                                                <label class="col-form-label col-form-label-sm">Apellido Materno:</label>
                                                <input type="text" class="form-control form-control-sm model" id="txtApellidoMaterno" name="txtApellidoMaterno">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="card border-info">
                                <div class="card-body p-2">
                                    <h6 class="card-title mb-1 text-info"></h6>
                                    <div class="row  align-items-end">

                                        <div class="col-sm-2">
                                            <div class="form-group mb-0">


                                                <label class="col-form-label col-form-label-sm">DNI:</label>
                                                <input type="text" class="form-control form-control-sm model" id="txtDni" name="txtDni">
                                            </div>
                                        </div>
                                        <div class="col-sm-2">
                                            <div class="form-group mb-0">

                                                <label class="col-form-label col-form-label-sm">Celular:</label>
                                                <input type="text" class="form-control form-control-sm model" id="txtCelular" name="txtCelular">
                                            </div>
                                        </div>

                                        <div class="col-sm-4">
                                            <div class="form-group mb-0">

                                                <label class="col-md-5 col-lg-4 control-label">Sexo:</label>
                                                <div class="col-md-7 col-lg-8">
                                                    <select id="cbxSexo" class="form-control">
                                                        <option value="">......</option>
                                                        <option value="true">MASCULINO</option>
                                                        <option value="false">FEMENINO</option>
                                                    </select>


                                                </div>
                                            </div>
                                        </div>




                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-sm-12">
                            <div class="card border-info">
                                <div class="card-body p-2">
                                    <h6 class="card-title mb-1 text-info"></h6>
                                    <div class="row">
                                        <input id="txtIdProducto" type="hidden" value="0" />
                                        <div class="col-sm-2">
                                            <div class="form-group mb-0">
                                                <label class="col-form-label col-form-label-sm">Detalle:</label>
                                                <input type="text" class="form-control form-control-sm model" id="txtDetalle" name="txtDetalle">
                                            </div>
                                        </div>
                                        <div class="col-sm-2">
                                            <div class="form-group mb-0">
                                                <label class="col-form-label col-form-label-sm">Direccion:</label>
                                                <input type="text" class="form-control form-control-sm model" id="txtDireccion" name="txtDireccion">
                                            </div>
                                        </div>
                                        <div class="col-sm-2">
                                            <div class="form-group mb-0">
                                                <label class="col-form-label col-form-label-sm">Correo:</label>
                                                <input type="text" class="form-control form-control-sm model" id="txtCorreo" name="txtCorreo">
                                            </div>
                                        </div>


                                        <div class="col-sm-2">
                                            <div class="form-group mb-0">

                                                <label class="col-form-label col-form-label-sm">Fecha Nacimiento:</label>
                                                <input type="date" class="form-control form-control-sm model" id="txtFechaNacimiento" name="txtFechaNacimiento">
                                            </div>
                                        </div>

                                        <div class="col-sm-2">
                                            <div class="form-group mb-0">


                                                <label class="col-form-label col-form-label-sm">Area:</label>

                                                <select id="cbxArea" class="form-control">
                                                    <option value="">- Seleccione una opcion - </option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-sm-2">
                                            <div class="form-group mb-0">


                                                <label class="col-form-label col-form-label-sm">Tipo Empleado:</label>

                                                <select id="cbxTipoEmpleado" class="form-control">
                                                    <option value="">- Seleccione una opcion - </option>
                                                </select>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-sm-12">
                            <button id="btnAgregarEmpleado" class="btn btn-primary btn-sm float-right">
                                <i class="fas fa-plus"></i> Guardar
                            </button>
                        </div>

                    </div>
                    <br />
                    <div class="row mt-2">
                        <div class="col-sm-12">
                            <button id="btnActualizarEmpleado" class="btn btn-primary btn-success float-right" disabled="true">
                                <i class="fa fa-refresh"></i> Actualizar

                            </button>
                        </div>

                    </div>

                    <hr />
                    <div class="row mt-3">
                        <div class="col-sm-12">
                            <div class="table-responsive-sm">
                                <table id="tbEmpleados" class="table table-striped table-bordered nowrap table-sm" style="width:100%">
                                    <thead>
                                        <tr>

                                            <th>ID PERSONA</th>
                                            <th>ID EMPLEADO</th>
                                            <th>NOMBRE </th>
                                            <th>APELLIDO PATERNO</th>
                                            <th>APELLIDO MATERNO</th>
                                            <th>DNI</th>
                                            <th>CELULAR</th>
                                            <th>CORREO</th>
                                            <th>SEXO</th>
                                            <th>DIRECCION</th>
                                            <th>DETALLE</th>
                                            <th>ID TIPO AREA</th>
                                            <th>NOMBRE TIPO AREA</th>
                                            <th>ID TIPO EMPLEADO</th>
                                            <th>TIPO EMPLEADO</th>
                                            <th>ACCION</th>



                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>

                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    @section scripts{
        <script src="@Url.Content("~/Scripts/Views/trabajador.js")" type="text/javascript"></script>

    }

</main>



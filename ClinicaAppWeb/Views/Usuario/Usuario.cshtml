
@{
    Layout = null;
}

<!DOCTYPE html>
@{
    ViewBag.Title = "Gestion Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="~/Scripts/Plugins/DataTables-1.10.15/media/js/jquery.dataTables.min.js"></script>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>

<main>
    <nav aria-label="breadcrumb" style="padding-left:50px">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Home", "Home")">Incio<</a></li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-sm-12">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    Gestion Usuarios
                </div>
                <div class="card-body card-compra p-2">
                    <div class="row">

                        <div class="col-sm-6">
                            <div class="card border-info">
                                <div class="card-body p-2">
                                    <h6 class="card-title mb-1 text-info"></h6>
                                    <div class="row align-items-end">
                                        <input id="txtIdProveedor" type="hidden" value="0" />
                                        <div class="col-sm-4">

                                            

                                                <label class="col-md-5 col-lg-4 control-label">DNI:</label>
                                                
                                                    <select id="cbxDni" class="form-control">
                                                        <option value="">......</option>

                                                    </select>

                                                
                                            

                                            
                                        </div>
                                        <div class="col-sm-4">
                                            
                                                <label class="col-form-label col-form-label-sm">Tipo Usuario:</label>
                                                
                                                    <select id="cbxTipoUsuario" class="form-control">
                                                        <option value="">......</option>

                                                    </select>


                                                

                                            
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group mb-0">
                                                <label class="col-form-label col-form-label-sm">Usuario:</label>
                                                <input type="text" class="form-control form-control-sm model" id="txtUsuario" name="txtUsuario">

                                            </div>
                                        </div>



                                        <div class="col-sm-4">
                                            <div class="form-group mb-0">
                                                <label class="col-form-label col-form-label-sm">Contraseña:</label>
                                                <input type="text" class="form-control form-control-sm model" id="txtPassword" name="txtPassword">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-sm-12">
                            <button id="btnAgregarUsuario" class="btn btn-primary btn-sm float-right">
                                <i class="fas fa-plus"></i> Guardar
                            </button>
                        </div>

                    </div>
                    <br />
                    <div class="row mt-2">
                        <div class="col-sm-12">
                            <button id="btnActualizarUsuario" class="btn btn-primary btn-success float-right" disabled="true">
                                <i class="fa fa-refresh"></i> Actualizar

                            </button>
                        </div>

                    </div>

                    <hr />
                    <div class="row mt-3">
                        <div class="col-sm-12">
                            <div class="table-responsive-sm">
                                <table id="tbUsuarios" class="table table-striped table-bordered nowrap table-sm" style="width:100%">
                                    <thead>
                                        <tr>

                                            <th>ID PERSONA</th>
                                            <th>ID USUARIO</th>
                                            <th>USUARIO </th>
                                            <th>NOMBRE </th>
                                            <th>APELLIDO PATERNO</th>
                                            <th>APELLIDO MATERNO</th>
                                            <th>DNI</th>
                                            <th>CELULAR</th>
                                            <th>CORREO</th>
                                            <th>ID TIPO USUARIO</th>
                                            <th>TIPO USUARIO</th>
                                            <th>ACCION</th>


                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>

                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    @section scripts{
        <script src="@Url.Content("~/Scripts/Views/GestionUsuario.js")" type="text/javascript"></script>

    }
    

</main>


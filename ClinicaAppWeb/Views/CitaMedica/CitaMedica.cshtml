
@{
    ViewBag.Title = "Cita Medica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="~/Scripts/Plugins/DataTables-1.10.15/media/js/jquery.dataTables.min.js"></script>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>

<main>
    <nav aria-label="breadcrumb" style="padding-left:50px">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Home", "Home")">Incio<</a></li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-sm-12">
            <div class="card border-info">
                <br />
                <div class="card-header bg-info text-white">
                    Registrar Cita Medica
                </div>
                <div class="card-body card-compra p-2">
                    <div class="row">

                        <div class="col-sm-6">
                            <div class="card border-info">
                                <div class="card-body p-2">
                                    <h6 class="card-title mb-1 text-info">--------------</h6>
                                    <div class="row align-items-end">
                                        <input id="txtIdProveedor" type="hidden" value="0" />
                                        <div class="col-sm-4">
                                            <div class="form-group mb-0">
                                                <label class="col-form-label col-form-label-sm">Ingrese Dni de Empleado:</label>
                                                <input type="text" class="form-control form-control-sm model" id="txtDniEmpleado" name="txtDniEmpleado">
                                                <br />
                                                <div class="form-group mb-0">
                                                    <button id="btnBuscarEmpleado" type="button" class="btn btn-sm btn-success btn-block" onclick="buscarEmpleado()"><i class="fas fa-search"></i> Buscar Empleado</button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group mb-0">
                                                <label class="col-form-label col-form-label-sm">Ingrese Dni de Cliente:</label>
                                                <input type="text" class="form-control form-control-sm model" id="txtDniCliente" name="txtDniCliente">
                                                <br />
                                                <div class="form-group mb-0">
                                                    <button id="btnBuscarCliente" type="button" class="btn btn-sm btn-success btn-block" onclick="buscarCliente()"><i class="fas fa-search"></i> Buscar Cliente</button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group mb-0">


                                                <label class="col-form-label col-form-label-sm">Area:</label>

                                                <select id="cbxArea" class="form-control">
                                                    <option value="">- Seleccione una opcion - </option>
                                                </select>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="card border-info">
                                <div class="card-body p-2">
                                    <h6 class="card-title mb-1 text-info">Detalle Adicional</h6>
                                    <div class="row  align-items-end">
                                        <input id="txtIdTienda" type="hidden" value="0" />
                                        <div class="col-sm-4">
                                            <div class="form-group mb-0">


                                                <label  class="col-form-label col-form-label-sm">Detalle Cita :</label>
                                                <input type="text" class="form-control form-control-sm model" id="txtDetalleCita" name="txtDetalleCita" >
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group mb-0">

                                                <label class="col-form-label col-form-label-sm">Nombre Empleado:</label>
                                                <input type="text" class="form-control form-control-sm model" id="txtNombreEmpleado" name="txtNombreEmpleado" readonly>
                                            </div>
                                        </div>

                                        <div class="col-sm-4">
                                            <div class="form-group mb-0">
                                                <label class="col-form-label col-form-label-sm">Nombre Cliente:</label>
                                                <input type="text" class="form-control form-control-sm model" id="txtNombreCliente" name="txtNombreCliente" readonly>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-sm-12">
                            <div class="card border-info">
                                <div class="card-body p-2">
                                    <h6 class="card-title mb-1 text-info">-------</h6>
                                    <div class="row">
                                        <input id="txtIdProducto" type="hidden" value="0" />
                                        <div class="col-sm-2">
                                            <div class="form-group mb-0">
                                                <label class="col-form-label col-form-label-sm">Tipo Servicio CLinico:</label>
                                                <select id="cbxTipoServicioClinico" class="form-control">
                                                    <option value="">- Seleccione una opcion - </option>
                                                </select>



                                            </div>
                                        </div>
                                        <div class="col-sm-2">
                                            <div class="form-group mb-0">
                                                <label class="col-form-label col-form-label-sm">Precio:</label>
                                                <input type="text" class="form-control form-control-sm model" id="txtPrecio" name="txtPrecio">
                                            </div>
                                        </div>



                                        <div class="col-sm-2">
                                            <div class="form-group mb-0">

                                                <label  class="col-form-label col-form-label-sm">Fecha Atencion:</label>
                                                <input type="date" class="form-control form-control-sm model" id="txtFechaAtencion" name="txtFechaAtencion" value="">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-sm-12">
                            <button id="btnGuardarCitaMedica" class="btn btn-primary btn-sm float-right">
                                <i class="fas fa-plus"></i> Guardar
                            </button>
                        </div>

                    </div>

                    <hr />
                    <div class="row mt-3">
                        <div class="col-sm-12">
                            <div class="table-responsive-sm">
                                <table id="tbCitasMedicas" class="table table-striped table-bordered nowrap table-sm" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>ID CITA MEDICA </th>
                                            <th>ID EMPLEADO </th>
                                            <th>NOMBRE EMPLEADO </th>
                                            <th>ID CLIENTE </th>
                                            <th>NOMBRE CLIENTE</th>
                                            <th>ID TIPO AREA</th>
                                            <th>TIPO AREA</th>
                                            <th>DETALLE</th>
                                            <th>ID TIPO SERVICIO</th>
                                            <th>TIPO SERVICIO CLINICO</th>
                                            <th>ID SERVICIO CLINICO</th>
                                            <th>PRECIO</th>
                                            

                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section scripts{
        <script src="@Url.Content("~/Scripts/Views/cita_medica.js")" type="text/javascript"></script>

    }


</main>
